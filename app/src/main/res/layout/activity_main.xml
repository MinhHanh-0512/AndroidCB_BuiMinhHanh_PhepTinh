<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#0000FF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:color="#FFFFFF"
            android:text="Lập trình sự kiện "
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Số A:"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editT1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="left"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_ST2"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Số B:"
            android:textSize="20sp" />
        <EditText
            android:id="@+id/editT2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#0000FF"
        android:layout_margin="6dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/txt_kq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_Tong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TỔNG 2 SỐ"
            android:textColor="@color/black"
            android:background="@drawable/bt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_Hieu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HIỆU 2 SỐ"
            android:textColor="@color/black"
            android:background="@drawable/bt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_Tich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÍCH 2 SỐ"
            android:textColor="@color/black"
            android:background="@drawable/bt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_Thuong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THƯƠNG 2 SỐ"
            android:textColor="@color/black"
            android:background="@drawable/bt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_ucln"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ƯỚC CHUNG LỚN NHẤT"
            android:textColor="@color/black"
            android:background="@drawable/bt"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="15dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/bt_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THOÁT CHƯƠNG TRÌNH"
            android:textColor="#FF0000"
            android:background="@drawable/bt"/>
    </LinearLayout>

</LinearLayout>